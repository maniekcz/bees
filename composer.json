{
    "name": "marian/bees",
    "require": {
        "php": "^7.3",
        "phpunit/phpunit": "^9.0",
        "ext-readline": "*",
        "psr/log": "^1.1"
    },
    "authors": [
        {
            "name": "Marian Czerniejewski",
            "email": "marian@czerniejewski.pl"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hive\\": "src/Hive",
            "Tests\\": "tests"
        }
